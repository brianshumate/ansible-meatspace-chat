#
# File: meatspace-chat.conf - Upstart configuration script for Meatspace Chat
#

description "meatspace-chat"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]
respawn
respawn limit 5 60

script
exec sudo -i -u {{ meatspace_chat_admin }} {{ meatspace_chat_dir }}/start_meatspace-chat.sh
end script
